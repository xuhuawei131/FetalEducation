    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbar_AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@style/MyMenuTextStyle</item>
    </style>

    <style name="MyMenuTextStyle" parent="Base.AlertDialog.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="neteasa_music_time_text_sytle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ccc</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="neteasa_music_time_seek_bar_sytle" parent="Widget.AppCompat.SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@drawable/ic_seekbar_thumb</item>
    </style>

    <style name="my_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="popstyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>

    </style>
<!---->
    <style name="dialogstyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!--导航栏布局-->
    <style name="navi_left_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="navi_left_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/black_787878</item>
    </style>


    <style name="text_navi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vipic</item>
    </style>


    <style name="text_article_navi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fa4e68</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_article_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="append_article_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cool_article_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
