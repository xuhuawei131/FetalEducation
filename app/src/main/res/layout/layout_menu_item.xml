<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    >


    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/image_collect"
            style="@style/popstyle"
            android:text="搜藏"
            android:drawableTop="@drawable/ic_play_pop_collected"
            />
        <TextView
            android:id="@+id/image_down"
            style="@style/popstyle"
            android:text="下载"
            android:drawableTop="@drawable/ic_play_pop_download"
             />
        <TextView
            android:id="@+id/image_timer"
            android:text="定时"
            android:drawableTop="@drawable/ic_play_pop_alarm"
            style="@style/popstyle" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/image_feedback"
            style="@style/popstyle"
            android:text="反馈"
            android:drawableTop="@drawable/ic_play_pop_feedback"
             />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray"
        />
    <TextView
        android:id="@+id/btn_close"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="关闭"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
